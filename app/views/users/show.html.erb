<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </aside>
    <div class="col-md-9">
      <% if @user.entries.any? %>
        <h3>entries (<%= @user.entries.count %>)</h3>
        <ol class="">
          <%= render @entries %>
        </ol>
        <%= will_paginate @entries %>
      <% end %>
    </div>
  </div>
</div>
