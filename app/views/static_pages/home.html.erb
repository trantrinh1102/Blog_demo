<div class="container" >
  <div class="row">
    <% if logged_in? %>
      <aside class="col-md-4">
          <section class="user_info">
            <%= render 'shared/user_info' %>
          </section>
          <section class="micropost_form">
            <%= render 'shared/entry_form' %>
          </section>
        </aside>
        <div class="col-md-8">
          <h3>Feed</h3>
          <%= render 'shared/feed' %>
        </div>
      </div>
    <% else %>
        <div class="col-md-12">
        <%= render 'shared/feed' %>
       </div>
    <% end %>
  </div>
</div>
